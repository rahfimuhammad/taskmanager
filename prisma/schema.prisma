generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String @id @default(uuid())
  username      String
  email         String
  password      String
  avatar        String
  tasks         Tasks[]         
}

model Tasks {
  id            String @id @default(uuid())
  title         String
  description   String
  createdAt     DateTime
  status        Boolean
  important     Boolean
  userId        String
  user          Users   @relation(fields: [userId], references: [id])
}
